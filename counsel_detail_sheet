// lib/ui/calendar/consultation_detail_sheet.dart

import 'package:flutter/material.dart';
import '../../data/repositories/api/consultation_repository.dart';
import '../../services/pocketbase_service.dart';

class ConsultationDetailSheet extends StatefulWidget {
  final String consultationId;
  final Map<String, dynamic>? initialData;
  final bool isParentView;
  final VoidCallback? onDeleted;
  final VoidCallback? onUpdated;

  const ConsultationDetailSheet({
    super.key,
    required this.consultationId,
    this.initialData,
    this.isParentView = false,
    this.onDeleted,
    this.onUpdated,
  });

  @override
  State<ConsultationDetailSheet> createState() => _ConsultationDetailSheetState();
}

class _ConsultationDetailSheetState extends State<ConsultationDetailSheet> {
  final _repo = ConsultationRepository();
  Map<String, dynamic>? _data;
  bool _loading = true;
  bool _saving = false;
  bool _isEditing = false;

  // 편집용 컨트롤러
  final _titleCtl = TextEditingController();
  final _noteCtl = TextEditingController();
  final _parentRequestCtl = TextEditingController();
  final _levelResultCtl = TextEditingController();
  final _levelScoreCtl = TextEditingController();
  final _paymentDayCtl = TextEditingController();
  final _agreedFeeCtl = TextEditingController();
  final _feedbackCtl = TextEditingController();
  final _parentCommentCtl = TextEditingController();
  final _teacherFeedbackCtl = TextEditingController();



  bool _isFirstVisit = true;
  bool _isPhoneOnly = false;
  bool _levelTestTaken = false;
  bool _noMakeupAcknowledged = false;
  List<int> _preferredWeekdays = [];

  static const _weekdayLabels = ['월', '화', '수', '목', '금', '토', '일'];

  String? _currentUserRole;

  @override
  void initState() {
    super.initState();
    _currentUserRole = pb.authStore.record?.data['role']?.toString();
    if (widget.initialData != null) {
      _data = widget.initialData;
      _populateFields();
      _loading = false;
    } else {
      _loadData();
    }
  }

  void _populateFields() {
    if (_data == null) return;
    _titleCtl.text = _data!['title']?.toString() ?? '';
    _noteCtl.text = _data!['note']?.toString() ?? '';
    _parentRequestCtl.text = _data!['parent_request']?.toString() ?? '';
    _levelResultCtl.text = _data!['level_test_result']?.toString() ?? '';
    _levelScoreCtl.text = (_data!['level_test_score'] ?? '').toString();
    _paymentDayCtl.text = (_data!['payment_day'] ?? '').toString();
    _agreedFeeCtl.text = (_data!['agreed_fee'] ?? '').toString();
    _feedbackCtl.text = _data!['teacher_feedback']?.toString() ?? '';
    _parentCommentCtl.text = _data!['parent_comment']?.toString() ?? '';

    _isFirstVisit = _data!['is_first_visit'] == true;
    _isPhoneOnly = _data!['is_phone_only'] == true;
    _levelTestTaken = _data!['level_test_taken'] == true;
    _noMakeupAcknowledged = _data!['no_makeup_acknowledged'] == true;

    final weekdays = _data!['preferred_weekdays'];
    if (weekdays is List) {
      _preferredWeekdays = weekdays.map((e) => int.tryParse(e.toString()) ?? 0).toList();
    }
  }

  Future<void> _loadData() async {
    final data = await _repo.getById(widget.consultationId);
    if (mounted) {
      setState(() {
        _data = data;
        _loading = false;
      });
      if (data != null) _populateFields();
    }
  }

  bool get _canEdit =>
      _currentUserRole == 'teacher' ||
          _currentUserRole == 'owner' ||
          _currentUserRole == 'admin';

  bool get _canDelete => _canEdit;

  @override
  void dispose() {
    _titleCtl.dispose();
    _noteCtl.dispose();
    _parentRequestCtl.dispose();
    _levelResultCtl.dispose();
    _levelScoreCtl.dispose();
    _paymentDayCtl.dispose();
    _agreedFeeCtl.dispose();
    _feedbackCtl.dispose();
    _parentCommentCtl.dispose();
    super.dispose();
  }

  @override
  Widget build(BuildContext context) {
    return Container(
      constraints: BoxConstraints(
        maxHeight: MediaQuery.of(context).size.height * 0.9,
      ),
      decoration: const BoxDecoration(
        color: Color(0xFFF2F2F7),
        borderRadius: BorderRadius.vertical(top: Radius.circular(16)),
      ),
      child: Column(
        mainAxisSize: MainAxisSize.min,
        children: [
          const SizedBox(height: 8),
          Container(
            width: 36,
            height: 4,
            decoration: BoxDecoration(
              color: Colors.grey.shade400,
              borderRadius: BorderRadius.circular(2),
            ),
          ),
          const SizedBox(height: 8),
          _buildHeader(),
          const Divider(height: 1),
          Flexible(
            child: _loading
                ? const Center(child: Padding(
              padding: EdgeInsets.all(40),
              child: CircularProgressIndicator(),
            ))
                : _data == null
                ? const Center(child: Text('상담 정보를 불러올 수 없습니다'))
                : SingleChildScrollView(
              padding: const EdgeInsets.all(16),
              child: _buildContent(),
            ),
          ),
        ],
      ),
    );
  }

  Widget _buildHeader() {
    final studentName = _data?['studentName']?.toString() ?? '';
    final dateStr = _formatDate(_data?['date']?.toString());

    return Padding(
      padding: const EdgeInsets.symmetric(horizontal: 8),
      child: Row(
        children: [
          TextButton(
            onPressed: () => Navigator.pop(context),
            child: Text('닫기', style: TextStyle(color: Colors.blue.shade600, fontSize: 13)),
          ),
          Expanded(
            child: Column(
              children: [
                Row(
                  mainAxisAlignment: MainAxisAlignment.center,
                  children: [
                    Icon(Icons.chat_bubble_outline, size: 16, color: Colors.teal.shade600),
                    const SizedBox(width: 6),
                    const Text('상담 기록', style: TextStyle(fontSize: 14, fontWeight: FontWeight.w600)),
                  ],
                ),
                if (studentName.isNotEmpty || dateStr.isNotEmpty)
                  Text(
                    [if (studentName.isNotEmpty) studentName, if (dateStr.isNotEmpty) dateStr].join(' · '),
                    style: TextStyle(fontSize: 11, color: Colors.grey.shade600),
                  ),
              ],
            ),
          ),
          if (_canEdit && !_isEditing)
            TextButton(
              onPressed: () => setState(() => _isEditing = true),
              child: Text('수정', style: TextStyle(color: Colors.blue.shade600, fontSize: 13)),
            )
          else if (_isEditing)
            TextButton(
              onPressed: _saving ? null : _saveChanges,
              child: _saving
                  ? const SizedBox(width: 16, height: 16, child: CircularProgressIndicator(strokeWidth: 2))
                  : Text('저장', style: TextStyle(color: Colors.blue.shade600, fontSize: 13, fontWeight: FontWeight.w600)),
            )
          else
            const SizedBox(width: 60),
        ],
      ),
    );
  }

  Widget _buildContent() {
    return Column(
      crossAxisAlignment: CrossAxisAlignment.start,
      children: [
        // 상담 유형
        _buildSection(
          icon: Icons.category_outlined,
          title: '상담 유형',
          child: _isEditing ? _buildTypeEditRow() : _buildTypeDisplayRow(),
        ),

        const SizedBox(height: 12),

        // 레벨테스트
        _buildSection(
          icon: Icons.quiz_outlined,
          title: '레벨테스트',
          child: _isEditing ? _buildLevelTestEdit() : _buildLevelTestDisplay(),
        ),

        const SizedBox(height: 12),

        // 등록/결제 정보
        _buildSection(
          icon: Icons.payment_outlined,
          title: '등록/결제 정보',
          child: _isEditing ? _buildPaymentEdit() : _buildPaymentDisplay(),
        ),

        const SizedBox(height: 12),

        // 선호 요일
        _buildSection(
          icon: Icons.calendar_today_outlined,
          title: '선호 요일',
          child: _isEditing ? _buildWeekdaysEdit() : _buildWeekdaysDisplay(),
        ),

        const SizedBox(height: 12),

        // 학부모 요청사항
        _buildSection(
          icon: Icons.record_voice_over_outlined,
          title: '학부모 요청사항',
          child: _isEditing
              ? _buildTextAreaEdit(_parentRequestCtl, '학부모님이 요청하신 내용...')
              : _buildTextDisplay(_data?['parent_request']?.toString()),
        ),

        const SizedBox(height: 12),

        // 무단결석 보강 안내
        _buildSection(
          icon: Icons.warning_amber_outlined,
          title: '무단결석 보강불가 안내',
          child: _isEditing
              ? _buildCheckboxRow('숙지 완료', _noMakeupAcknowledged, (v) => setState(() => _noMakeupAcknowledged = v ?? false))
              : Row(
            children: [
              Icon(
                _noMakeupAcknowledged ? Icons.check_circle : Icons.cancel,
                size: 18,
                color: _noMakeupAcknowledged ? Colors.green : Colors.grey,
              ),
              const SizedBox(width: 8),
              Text(
                _noMakeupAcknowledged ? '숙지 완료' : '미확인',
                style: TextStyle(
                  fontSize: 13,
                  color: _noMakeupAcknowledged ? Colors.green.shade700 : Colors.grey.shade600,
                ),
              ),
            ],
          ),
        ),

        const SizedBox(height: 12),

        // 선생님 피드백
        _buildSection(
          icon: Icons.edit_note_outlined,
          title: '선생님 메모',
          child: _isEditing
              ? _buildTextAreaEdit(_feedbackCtl, '상담 후 메모...')
              : _buildTextDisplay(_data?['teacher_feedback']?.toString()),
        ),

        const SizedBox(height: 12),

        // 상담 메모 (기본 note)
        _buildSection(
          icon: Icons.notes_outlined,
          title: '상담 내용',
          child: _isEditing
              ? _buildTextAreaEdit(_noteCtl, '상담 내용...')
              : _buildTextDisplay(_data?['note']?.toString()),
        ),

        // 학부모 댓글 (보기 모드 + 학부모인 경우 입력 가능)
        if (!_isEditing && widget.isParentView) ...[
          const SizedBox(height: 12),
          _buildParentCommentSection(),
        ],

        // 삭제 버튼
        if (_canDelete && !_isEditing) ...[
          const SizedBox(height: 24),
          Center(
            child: TextButton.icon(
              onPressed: _confirmDelete,
              icon: const Icon(Icons.delete_outline, size: 18),
              label: const Text('상담 기록 삭제'),
              style: TextButton.styleFrom(foregroundColor: Colors.red),
            ),
          ),
        ],

        const SizedBox(height: 24),
      ],
    );
  }

  Widget _buildSection({required IconData icon, required String title, required Widget child}) {
    return Container(
      padding: const EdgeInsets.all(14),
      decoration: BoxDecoration(
        color: Colors.white,
        borderRadius: BorderRadius.circular(12),
      ),
      child: Column(
        crossAxisAlignment: CrossAxisAlignment.start,
        children: [
          Row(
            children: [
              Icon(icon, size: 16, color: Colors.grey.shade600),
              const SizedBox(width: 6),
              Text(title, style: TextStyle(fontSize: 12, color: Colors.grey.shade600, fontWeight: FontWeight.w500)),
            ],
          ),
          const SizedBox(height: 10),
          child,
        ],
      ),
    );
  }

  Widget _buildTypeDisplayRow() {
    return Wrap(
      spacing: 8,
      runSpacing: 8,
      children: [
        _tagChip(_isFirstVisit ? '첫 방문' : '재방문', _isFirstVisit ? Colors.blue : Colors.grey),
        _tagChip(_isPhoneOnly ? '유선 상담' : '대면 상담', _isPhoneOnly ? Colors.orange : Colors.teal),
      ],
    );
  }

  Widget _buildTypeEditRow() {
    return Column(
      children: [
        _buildCheckboxRow('첫 방문 상담', _isFirstVisit, (v) => setState(() => _isFirstVisit = v ?? true)),
        _buildCheckboxRow('유선 상담 (전화)', _isPhoneOnly, (v) => setState(() => _isPhoneOnly = v ?? false)),
      ],
    );
  }

  Widget _buildLevelTestDisplay() {
    if (!_levelTestTaken) {
      return Text('레벨테스트 미응시', style: TextStyle(fontSize: 13, color: Colors.grey.shade500));
    }
    final score = _data?['level_test_score'];
    final result = _data?['level_test_result']?.toString() ?? '';
    return Wrap(
      spacing: 8,
      runSpacing: 8,
      children: [
        _tagChip('응시 완료', Colors.green),
        if (score != null) _tagChip('$score점', Colors.blue),
        if (result.isNotEmpty) _tagChip(result, Colors.purple),
      ],
    );
  }

  Widget _buildLevelTestEdit() {
    return Column(
      crossAxisAlignment: CrossAxisAlignment.start,
      children: [
        _buildCheckboxRow('레벨테스트 응시', _levelTestTaken, (v) => setState(() => _levelTestTaken = v ?? false)),
        if (_levelTestTaken) ...[
          const SizedBox(height: 8),
          Row(
            children: [
              Expanded(
                child: TextField(
                  controller: _levelScoreCtl,
                  keyboardType: TextInputType.number,
                  style: const TextStyle(fontSize: 13),
                  decoration: _inputDeco('점수'),
                ),
              ),
              const SizedBox(width: 12),
              Expanded(
                child: TextField(
                  controller: _levelResultCtl,
                  style: const TextStyle(fontSize: 13),
                  decoration: _inputDeco('결과 (예: 중급)'),
                ),
              ),
            ],
          ),
        ],
      ],
    );
  }

  Widget _buildPaymentDisplay() {
    final paymentDay = _data?['payment_day'];
    final agreedFee = _data?['agreed_fee'];
    if (paymentDay == null && agreedFee == null) {
      return Text('등록되지 않음', style: TextStyle(fontSize: 13, color: Colors.grey.shade500));
    }
    return Wrap(
      spacing: 8,
      runSpacing: 8,
      children: [
        if (paymentDay != null) _tagChip('결제일: 매월 $paymentDay일', Colors.indigo),
        if (agreedFee != null) _tagChip('교습비: ${_formatNumber(agreedFee)}원', Colors.green),
      ],
    );
  }

  Widget _buildPaymentEdit() {
    return Row(
      children: [
        Expanded(
          child: TextField(
            controller: _paymentDayCtl,
            keyboardType: TextInputType.number,
            style: const TextStyle(fontSize: 13),
            decoration: _inputDeco('결제일 (1~31)'),
          ),
        ),
        const SizedBox(width: 12),
        Expanded(
          child: TextField(
            controller: _agreedFeeCtl,
            keyboardType: TextInputType.number,
            style: const TextStyle(fontSize: 13),
            decoration: _inputDeco('협의 금액'),
          ),
        ),
      ],
    );
  }

  Widget _buildWeekdaysDisplay() {
    if (_preferredWeekdays.isEmpty) {
      return Text('선호 요일 없음', style: TextStyle(fontSize: 13, color: Colors.grey.shade500));
    }
    return Wrap(
      spacing: 6,
      children: _preferredWeekdays.map((d) {
        final label = d >= 1 && d <= 7 ? _weekdayLabels[d - 1] : '?';
        return _tagChip(label, Colors.blue);
      }).toList(),
    );
  }

  Widget _buildWeekdaysEdit() {
    return Wrap(
      spacing: 8,
      runSpacing: 8,
      children: List.generate(7, (i) {
        final day = i + 1;
        final selected = _preferredWeekdays.contains(day);
        return FilterChip(
          label: Text(_weekdayLabels[i]),
          selected: selected,
          onSelected: (v) {
            setState(() {
              if (v) {
                _preferredWeekdays.add(day);
              } else {
                _preferredWeekdays.remove(day);
              }
              _preferredWeekdays.sort();
            });
          },
          selectedColor: Colors.blue.shade100,
          checkmarkColor: Colors.blue.shade700,
        );
      }),
    );
  }

  Widget _buildTextDisplay(String? text) {
    if (text == null || text.trim().isEmpty) {
      return Text('내용 없음', style: TextStyle(fontSize: 13, color: Colors.grey.shade500));
    }
    return Text(text, style: const TextStyle(fontSize: 13, height: 1.5));
  }

  Widget _buildTextAreaEdit(TextEditingController ctl, String hint) {
    return TextField(
      controller: ctl,
      maxLines: 3,
      style: const TextStyle(fontSize: 13),
      decoration: _inputDeco(hint),
    );
  }

  Widget _buildCheckboxRow(String label, bool value, ValueChanged<bool?> onChanged) {
    return Row(
      children: [
        SizedBox(
          width: 24,
          height: 24,
          child: Checkbox(value: value, onChanged: onChanged),
        ),
        const SizedBox(width: 8),
        Text(label, style: const TextStyle(fontSize: 13)),
      ],
    );
  }

  Widget _buildParentCommentSection() {
    final hasComment = (_data?['parent_comment']?.toString() ?? '').isNotEmpty;

    return _buildSection(
      icon: Icons.comment_outlined,
      title: '학부모 댓글',
      child: Column(
        crossAxisAlignment: CrossAxisAlignment.start,
        children: [
          if (hasComment) ...[
            Container(
              width: double.infinity,
              padding: const EdgeInsets.all(12),
              decoration: BoxDecoration(
                color: Colors.teal.shade50,
                borderRadius: BorderRadius.circular(10),
                border: Border.all(color: Colors.teal.shade200),
              ),
              child: Column(
                crossAxisAlignment: CrossAxisAlignment.start,
                children: [
                  Text(_data!['parent_comment'].toString(), style: const TextStyle(fontSize: 13, height: 1.5)),
                  const SizedBox(height: 8),
                  Text(
                    _formatDateTime(_data!['parent_comment_at']?.toString()),
                    style: TextStyle(fontSize: 10, color: Colors.grey.shade500),
                  ),
                ],
              ),
            ),
            const SizedBox(height: 12),
          ],
          TextField(
            controller: _parentCommentCtl,
            maxLines: 2,
            style: const TextStyle(fontSize: 13),
            decoration: _inputDeco(hasComment ? '댓글 수정...' : '댓글 남기기...'),
          ),
          const SizedBox(height: 8),
          Align(
            alignment: Alignment.centerRight,
            child: ElevatedButton(
              onPressed: _saving ? null : _saveParentComment,
              style: ElevatedButton.styleFrom(
                backgroundColor: Colors.teal,
                foregroundColor: Colors.white,
                padding: const EdgeInsets.symmetric(horizontal: 20, vertical: 10),
              ),
              child: Text(hasComment ? '수정' : '저장', style: const TextStyle(fontSize: 13)),
            ),
          ),
        ],
      ),
    );
  }

  Widget _tagChip(String label, Color color) {
    return Container(
      padding: const EdgeInsets.symmetric(horizontal: 10, vertical: 4),
      decoration: BoxDecoration(
        color: color.withOpacity(0.15),
        borderRadius: BorderRadius.circular(12),
        border: Border.all(color: color.withOpacity(0.4)),
      ),
      child: Text(label, style: TextStyle(fontSize: 11, color: color.shade700, fontWeight: FontWeight.w500)),
    );
  }

  InputDecoration _inputDeco(String hint) {
    return InputDecoration(
      hintText: hint,
      hintStyle: TextStyle(fontSize: 13, color: Colors.grey.shade400),
      filled: true,
      fillColor: Colors.grey.shade50,
      contentPadding: const EdgeInsets.all(12),
      border: OutlineInputBorder(
        borderRadius: BorderRadius.circular(10),
        borderSide: BorderSide(color: Colors.grey.shade200),
      ),
      enabledBorder: OutlineInputBorder(
        borderRadius: BorderRadius.circular(10),
        borderSide: BorderSide(color: Colors.grey.shade200),
      ),
      focusedBorder: OutlineInputBorder(
        borderRadius: BorderRadius.circular(10),
        borderSide: BorderSide(color: Colors.blue.shade300),
      ),
    );
  }

  Future<void> _saveChanges() async {
    setState(() => _saving = true);
    try {
      final success = await _repo.update(widget.consultationId, {
        'title': _titleCtl.text.trim(),
        'note': _noteCtl.text.trim(),
        'is_first_visit': _isFirstVisit,
        'is_phone_only': _isPhoneOnly,
        'level_test_taken': _levelTestTaken,
        'level_test_score': int.tryParse(_levelScoreCtl.text),
        'level_test_result': _levelResultCtl.text.trim(),
        'parent_request': _parentRequestCtl.text.trim(),
        'preferred_weekdays': _preferredWeekdays,
        'payment_day': int.tryParse(_paymentDayCtl.text),
        'agreed_fee': int.tryParse(_agreedFeeCtl.text),
        'no_makeup_acknowledged': _noMakeupAcknowledged,
        'teacher_feedback': _feedbackCtl.text.trim(),
      });

      if (success && mounted) {
        await _loadData();
        setState(() => _isEditing = false);
        widget.onUpdated?.call();
        ScaffoldMessenger.of(context).showSnackBar(
          const SnackBar(content: Text('저장되었습니다'), duration: Duration(seconds: 1)),
        );
      }
    } finally {
      if (mounted) setState(() => _saving = false);
    }
  }

  Future<void> _saveParentComment() async {
    final comment = _parentCommentCtl.text.trim();
    if (comment.isEmpty) return;

    setState(() => _saving = true);
    try {
      final success = await _repo.saveParentComment(widget.consultationId, comment);
      if (success && mounted) {
        await _loadData();
        widget.onUpdated?.call();
        ScaffoldMessenger.of(context).showSnackBar(
          const SnackBar(content: Text('댓글이 저장되었습니다'), duration: Duration(seconds: 1)),
        );
      }
    } finally {
      if (mounted) setState(() => _saving = false);
    }
  }

  Future<void> _confirmDelete() async {
    final confirm = await showDialog<bool>(
      context: context,
      builder: (ctx) => AlertDialog(
        title: const Text('상담 기록 삭제'),
        content: const Text('이 상담 기록을 삭제하시겠습니까?\n삭제 후 복구할 수 없습니다.'),
        actions: [
          TextButton(onPressed: () => Navigator.pop(ctx, false), child: const Text('취소')),
          TextButton(
            onPressed: () => Navigator.pop(ctx, true),
            style: TextButton.styleFrom(foregroundColor: Colors.red),
            child: const Text('삭제'),
          ),
        ],
      ),
    );

    if (confirm == true) {
      final success = await _repo.delete(widget.consultationId);
      if (success && mounted) {
        widget.onDeleted?.call();
        Navigator.pop(context);
        ScaffoldMessenger.of(context).showSnackBar(
          const SnackBar(content: Text('삭제되었습니다'), duration: Duration(seconds: 1)),
        );
      }
    }
  }

  String _formatDate(String? iso) {
    if (iso == null || iso.isEmpty) return '';
    final dt = DateTime.tryParse(iso)?.toLocal();
    if (dt == null) return '';
    return '${dt.year}.${dt.month}.${dt.day}';
  }

  String _formatDateTime(String? iso) {
    if (iso == null || iso.isEmpty) return '';
    final dt = DateTime.tryParse(iso)?.toLocal();
    if (dt == null) return '';
    return '${dt.year}.${dt.month}.${dt.day} ${dt.hour.toString().padLeft(2, '0')}:${dt.minute.toString().padLeft(2, '0')}';
  }

  String _formatNumber(dynamic n) {
    if (n == null) return '';
    final num = int.tryParse(n.toString()) ?? 0;
    return num.toString().replaceAllMapped(RegExp(r'(\d{1,3})(?=(\d{3})+(?!\d))'), (m) => '${m[1]},');
  }
}

extension _ColorShade on Color {
  Color get shade700 {
    final hsl = HSLColor.fromColor(this);
    return hsl.withLightness((hsl.lightness - 0.2).clamp(0.0, 1.0)).toColor();
  }
}
